  "POST /api/articles": {
    "description": "creates a new article and returns the newly created article object",
    "body": {
      "author": "string",
      "title": "string",
      "body": "string",
      "topic": "string",
      "article_img_url": "string"
    },
    "exampleResponse": {
      "newArticle": {
        "article_id": 1,
